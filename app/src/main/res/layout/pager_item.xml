<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="6dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="7dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nwAuthor"
        android:text="Aseem Savio"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nwTitle"
        android:layout_below="@+id/nwAuthor"
        android:text="My name is Aseem Savio"
        android:textSize="25sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="5dp"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>


        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/nwImage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:elevation="@dimen/cardview_default_elevation"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="10dp"
            >
<ImageButton
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_favorite_border_black_24px"
    android:layout_weight="1"
    android:id="@+id/fav"
    android:background="#3b5998"

    />
            <View
                android:layout_width="2dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_share_black_24px"
                android:layout_weight="1"
                android:id="@+id/sha"
                android:background="#3b5998"

                />
            <View
                android:layout_width="2dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pages_black_24px"
                android:layout_weight="1"
                android:id="@+id/mor"
                android:background="#3b5998"

                />


        </LinearLayout>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="7dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nwTime"
        android:text="1/1/1"
        android:paddingBottom="5dp"
        />

<View
    android:layout_width="match_parent"
    android:layout_height=".5dp"
    android:background="#d3d3d3"
    android:id="@+id/v2"
    android:layout_below="@+id/nwTime"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nwDesc"
        android:text="My name is Aseem Savio"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/v2"
        android:paddingTop="3dp"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
    </ScrollView>

</LinearLayout>