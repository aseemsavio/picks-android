<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.aseemsavio.picks.LogInActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay Informed!"
            android:textSize="27sp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:textColor="#ff000000"
            />



            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#66000000"
                android:textColorHint="#66000000" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#66000000"
            android:textColorHint="#66000000" />



        <Button
            android:id="@+id/login_btn"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="#3b5988"
            android:textColor="#ffffffff"
            android:text="Login"
            android:layout_marginTop="260dp"
            android:layout_gravity="center_horizontal"
            />



        <Button
            android:id="@+id/sign_up_call_btn"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:text="   New to Picks? GET STARTED!   "
            android:textAllCaps="false"
            android:background="#8b0000"
            android:textColor="#ffffff"
            android:layout_marginTop="330dp"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/forgot_pwd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Forgot Password?   "
            android:textAllCaps="false"
            android:background="#00ffffff"
            android:textColor="#ff000000"
            android:layout_marginTop="400dp"
            android:layout_gravity="center_horizontal"
            />
        <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginTop="260dp"
            android:layout_marginLeft="30dp"
         />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.ads.AdView

                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-7332689293305822/7148139396"
                >

            </com.google.android.gms.ads.AdView>

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>
